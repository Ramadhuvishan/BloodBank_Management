<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    android:background="#FF0000"

    tools:context=".MainActivity">

    <AbsoluteLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="#F6F6F6">

        <ImageView
            android:layout_width="238dp"
            android:layout_height="144dp"
            android:layout_x="79dp"
            android:layout_y="93dp"
            android:background="@drawable/one" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_x="101dp"
            android:layout_y="238dp"
            android:text="DONATE BLOOD"
            android:textAlignment="center"
            android:textColor="#F44336"
            android:textColorHint="#FFFFFF"
            android:textSize="24sp" />

        <Button
            android:id="@+id/request"
            android:layout_width="158dp"

            android:layout_height="150dp"
            android:layout_marginTop="61dp"
            android:layout_x="118dp"
            android:layout_y="362dp"
            android:background="@drawable/circle"
            android:text="@string/request_blood"
            android:textColor="#FFF"
            android:textColorHighlight="#FFFFFF"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/admin"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="555dp"
            android:layout_x="286dp"
            android:layout_y="569dp"
            android:background="#FF0000"
            android:text="@string/status"
            android:textColor="#fff" />

        <Button
            android:id="@+id/status"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="555dp"
            android:layout_x="22dp"
            android:layout_y="571dp"
            android:background="#FF0000"
            android:text="@string/admin"
            android:textColor="#fff" />

        <Button
            android:id="@+id/group_3"
            android:layout_width="158dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="108dp"
            android:layout_marginTop="555dp"
            android:layout_x="117dp"
            android:layout_y="570dp"
            android:background="#137F01"
            android:text="@string/donate"
            android:textColor="#fff" />
    </AbsoluteLayout>



</AbsoluteLayout>